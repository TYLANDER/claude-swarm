# ============================================
# Claude Swarm - Environment Configuration
# ============================================
# Copy this to .env and fill in your values

# --------------------------------------------
# Required: API Keys
# --------------------------------------------

# Anthropic API key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# GitHub token with repo access (for cloning/pushing)
GITHUB_TOKEN=ghp_xxxxx

# JWT secret for API authentication (generate: openssl rand -hex 32)
JWT_SECRET=your-secret-here

# --------------------------------------------
# Azure Configuration (for cloud deployment)
# --------------------------------------------

# Azure Service Bus connection string
AZURE_SERVICE_BUS_CONNECTION=Endpoint=sb://your-bus.servicebus.windows.net/;SharedAccessKeyName=...

# Azure Storage account URL
STORAGE_ACCOUNT_URL=https://yourstorageaccount.blob.core.windows.net

# Azure subscription/resource info (for spawning agents)
AZURE_SUBSCRIPTION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
AZURE_RESOURCE_GROUP=claude-swarm
AZURE_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Container Apps job name
AGENT_JOB_NAME=claude-swarm-agent-worker

# Container registry
CONTAINER_REGISTRY_URL=youracr.azurecr.io

# --------------------------------------------
# Optional: Redis (for state persistence)
# --------------------------------------------

# Redis URL (leave empty for in-memory state)
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Optional: Observability
# --------------------------------------------

# Application Insights connection string
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxxxx;IngestionEndpoint=...

# Log level (trace, debug, info, warn, error)
LOG_LEVEL=info

# --------------------------------------------
# Service Configuration
# --------------------------------------------

# Port for orchestrator
PORT=3000

# Budget limits
DAILY_BUDGET_CENTS=10000
WEEKLY_BUDGET_CENTS=50000

# Max parallel agents
MAX_PARALLEL_AGENTS=10
